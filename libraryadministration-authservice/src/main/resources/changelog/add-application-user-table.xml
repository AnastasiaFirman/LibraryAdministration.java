<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="1" author="Anastasia">
        <createTable tableName="application_user" remarks="User table">
            <column name="username" type="text" remarks="Name">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="password" type="text" remarks="Password">
                <constraints nullable="false"/>
            </column>
            <column name="is_account_non_expired" type="bool" remarks="Is account non expired" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_account_non_locked" type="bool" remarks="Is account non locked" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_credentials_non_expired" type="bool" remarks="Is credentials non expired" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="is_enabled" type="bool" remarks="Is enabled" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>